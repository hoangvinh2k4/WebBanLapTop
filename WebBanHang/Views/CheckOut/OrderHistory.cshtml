@model IEnumerable<OrderModel>

@{
    ViewData["Title"] = "Lịch sử mua hàng";
}

<div class="container mt-4">
    <h2>Lịch sử mua hàng</h2>

    @if (!Model.Any())
    {
        <p>Bạn chưa có đơn hàng nào.</p>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <b>Mã đơn:</b> @order.OrderID |
                    <b>Ngày đặt:</b> @order.OrderDate.ToString("dd/MM/yyyy HH:mm") |
                    <b>Tổng cuối:</b> @string.Format("{0:N0} đ", order.TotalAmount + order.ShippingFee - order.DiscountAmount) |
                    <b>Trạng thái:</b> @order.Status
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Mô tả</th>
                                <th>Giá</th>
                                <th>Tạm tính</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in order.OrderDetails)
                            {
                                <tr>
                                    <td>@detail.Product.NameProduct</td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.Product.Description</td>
                                    <td>@string.Format("{0:N0} đ", detail.Price)</td>
                                    <td>@string.Format("{0:N0} đ", detail.Price * detail.Quantity)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

         <!-- Nút xóa -->
        <form id="clearHistoryForm"
              asp-action="ClearOrderHistory"
              asp-controller="CheckOut"
              method="post">
            <button type="submit" id="btnClearHistory" class="btn btn-danger mb-3">
                <i class="fa fa-trash"></i> Xóa tất cả lịch sử đơn hàng
            </button>
        </form>
    }
</div>

@section Scripts {
    <script>
        document.getElementById("btnClearHistory").addEventListener("click", function (e) {
            e.preventDefault();

            Swal.fire({
                title: 'Bạn có chắc không?',
                text: "Toàn bộ lịch sử đơn hàng sẽ bị xóa và không thể khôi phục!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Xóa tất cả',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("clearHistoryForm").submit();
                }
            });
        });
    </script>
}