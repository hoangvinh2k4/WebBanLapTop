@model IEnumerable<ProductModel>
<div class="col-sm-3">
    @Html.Partial("_SidebarParticial")
</div>

<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>

        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">                
                    <div class="single-products">
                        <a asp-action="DetailProduct" asp-controller="Product" asp-route-id="">
                        <div class="productinfo text-center">
                                <!-- Hiển thị ảnh sản phẩm -->
                                @{
                                    var imageUrl = item.ProductImages?.FirstOrDefault()?.ImageUrl;
                                    var imagePath = !string.IsNullOrEmpty(imageUrl) ? $"~/images/{imageUrl}" : "~/images/no-image-available.jpg";
                                }
                                <img src="@Url.Content(imagePath)" alt="@item.NameProduct" />
                            @* <img src="images/legion5.jpg" alt="" /> *@
                            <h2>@item.Price VNĐ</h2>
                            <p>Tên sản phẩm :@item.NameProduct </p>
                            <p>Thương hiệu :@item.Brand.NameBrand </p>
                            <a href="#" class="btn btn-default add-to-cart">
                                <i class="fa fa-shopping-cart"></i> Add to cart
                            </a>
                        </div>
                       </a> 
                    </div>
                
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>                           
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
