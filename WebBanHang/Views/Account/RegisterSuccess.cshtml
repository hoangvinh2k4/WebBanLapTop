@{
    ViewData["Title"] = "Thành công";
}

<div id="success-toast"
     style="position: fixed; top: 20px; right: 20px; background: #28a745; color: #fff; padding: 15px 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.2); z-index: 9999;">
    ✅ Tạo tài khoản thành công!
</div>

<script>
    setTimeout(function () {
        var toast = document.getElementById("success-toast");
        if (toast) {
            toast.style.display = "none";
            // ✅ Sau khi tắt toast thì chuyển sang Login
            window.location.href = '/Account/Login';
        }
    }, 2000); // 2 giây
</script>
