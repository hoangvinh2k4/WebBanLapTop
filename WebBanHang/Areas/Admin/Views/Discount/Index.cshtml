@model IEnumerable<WebBanHang.Models.DiscountModel>
@{
    ViewData["Title"] = "Mã giảm giá";
    Layout = "_LayoutAdmin";
}

<h2>Danh sách Mã Giảm Giá</h2>

<a asp-action="Create" class="btn btn-success mb-3">Tạo Mã Giảm Giá</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Mã</th>
            <th>Phần trăm</th>
            <th>Số lượng</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Kích hoạt</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DiscountID</td>
                <td>@item.Code</td>
                <td>@item.Percentage %</td>
                <td>@item.Quantity</td>
                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Đang kích hoạt</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Tắt</span>
                    }
                </td>
                <td>
                    @if (DateTime.Now > item.EndDate)
                    {
                        <span class="badge bg-danger">Đã hết hạn</span>
                    }
                    else
                    {
                        <span class="badge bg-info">Còn hiệu lực</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiscountID" class="btn btn-warning btn-sm">Sửa</a>

                    <form asp-action="Delete" asp-route-id="@item.DiscountID"
                          method="post" class="delete-form" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Xoá</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const forms = document.querySelectorAll(".delete-form");

            forms.forEach(form => {
                form.addEventListener("submit", function (e) {
                    e.preventDefault(); // Ngăn reload

                    Swal.fire({
                        title: 'Bạn có chắc muốn xoá mã này không?',
                        text: "Hành động này không thể hoàn tác!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Xoá',
                        cancelButtonText: 'Huỷ'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // ✅ Gửi request bằng fetch
                            fetch(form.action, {
                                method: 'POST',
                                body: new FormData(form)
                            })
                            .then(res => {
                                if (res.ok) {
                                    Swal.fire({
                                        title: 'Đã xoá thành công!',
                                        text: 'Mã giảm giá đã được xóa khỏi hệ thống.',
                                        icon: 'success',
                                        confirmButtonText: 'OK'
                                    }).then(() => {
                                        // Reload lại trang sau khi người dùng bấm OK
                                        location.reload();
                                    });
                                } else {
                                    throw new Error('Không thể xoá');
                                }
                            })
                            .catch(err => {
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: 'Không thể xoá vì mã này đang được sử dụng.',
                                    icon: 'error',
                                    confirmButtonText: 'Đóng'
                                });
                            });
                        }
                    });
                });
            });
        });
    </script>
}


