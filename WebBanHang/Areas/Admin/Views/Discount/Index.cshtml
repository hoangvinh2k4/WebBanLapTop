@model IEnumerable<WebBanHang.Models.DiscountModel>
@{
    ViewData["Title"] = "Mã giảm giá";
    Layout = "_LayoutAdmin";
}

<h2>Danh sách Mã Giảm Giá</h2>

@* Hiển thị thông báo TempData từ Controller *@
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a asp-action="Create" class="btn btn-success mb-3">Tạo Mã Giảm Giá</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Mã</th>
            <th>Phần trăm</th>
            <th>Số lượng</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Kích hoạt</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            // Mã đã hết hạn nếu ngày kết thúc NHỎ HƠN ngày hiện tại.
            bool isExpired = item.EndDate.Date < DateTime.Now.Date;

            <tr>
                <td>@item.DiscountID</td>
                <td>@item.Code</td>
                <td>@item.Percentage %</td>
                <td>@item.Quantity</td>
                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Đang kích hoạt</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Tắt</span>
                    }
                </td>
                <td>
                    @if (isExpired) // SỬ DỤNG BIẾN isExpired ĐÃ TÍNH
                    {
                        <span class="badge bg-danger">Đã hết hạn</span>
                    }
                    else
                    {
                        <span class="badge bg-info">Còn hiệu lực</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiscountID" class="btn btn-warning btn-sm">Sửa</a>

                    <form asp-action="Delete" asp-route-id="@item.DiscountID"
                          method="post" class="delete-form" style="display:inline;">

                        @* 💡 2. CHÈN TRƯỜNG ẨN CHO JAVASCRIPT *@
                        @if (isExpired)
                        {
                            // Nếu đã hết hạn, chèn trường ẩn để JS cho phép tiếp tục
                            <input type="hidden" name="is_expired" value="true" />
                            <button type="submit" class="btn btn-danger btn-sm">Xoá</button>
                        }
                        else
                        {
                            // Nếu chưa hết hạn, chèn trường ẩn để JS chặn (value="false")
                            <input type="hidden" name="is_expired" value="false" />
                            <button type="submit" class="btn btn-danger btn-sm" title="Chỉ có thể xoá mã giảm giá đã hết hạn.">Xoá</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/deletemgg.js"></script>
}