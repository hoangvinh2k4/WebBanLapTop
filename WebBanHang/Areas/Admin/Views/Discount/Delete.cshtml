@model WebBanHang.Models.DiscountModel

@{
    ViewData["Title"] = "Xóa mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h2 class="text-danger">Bạn có chắc muốn xóa mã giảm giá này?</h2>

        <dl class="row">
            <dt class="col-sm-3">Mã giảm giá</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3">Phần trăm</dt>
            <dd class="col-sm-9">@Model.Percentage %</dd>

            <dt class="col-sm-3">Ngày bắt đầu</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Ngày kết thúc</dt>
            <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="DiscountID" />
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
