@{
    ViewData["Title"] = "Thống kê";
    var labels = ViewBag.Labels as List<string> ?? new List<string>();
    var data = ViewBag.Data as List<decimal> ?? new List<decimal>();
}

<div class="container mt-4">
    <h2 class="mb-4">📊 Thống kê</h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5>Tổng doanh thu</h5>
                    <h3>@string.Format("{0:N0} đ", ViewBag.TotalRevenue)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5>Tổng số đơn hàng</h5>
                    <h3>@ViewBag.TotalOrders</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5>Tổng số người dùng</h5>
                    <h3>@ViewBag.TotalUsers</h3>
                </div>
            </div>
        </div>
    </div>

    <h4>📅 Doanh thu theo tháng (Năm @DateTime.Now.Year)</h4>
    <div class="row">
        <div class="col-md-8">
            <canvas id="revenueChart" height="120"></canvas>
        </div>
        <div class="col-md-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Tháng</th>
                        <th>Doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < labels.Count; i++)
                    {
                        <tr>
                            <td>@labels[i]</td>
                            <td>@string.Format("{0:N0} đ", data[i])</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('revenueChart').getContext('2d');
    var revenueChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(labels)),
            datasets: [{
                label: 'Doanh thu (VNĐ)',
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(data)),
                backgroundColor: 'rgba(54, 162, 235, 0.5)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function (value) {
                            return value.toLocaleString() + ' đ';
                        }
                    }
                }
            }
        }
    });
</script>
