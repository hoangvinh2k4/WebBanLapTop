@model IEnumerable<WebBanHang.Models.UserModel>

@{
    ViewData["Title"] = "List User";
    Layout = "_LayoutMini";
}

<h3>Danh sách người dùng</h3>
<a class="btn btn-primary mb-2" asp-action="Create" asp-controller="User">Thêm Người Dùng</a>

<!-- Tạo token xác thực cho AJAX -->
<form asp-antiforgery="true"></form>

<table class="table table-bordered text-center align-middle">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr id="row-@user.UserID">
                <td>@user.UserID</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Password</td>
                <td>@user.Phone</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-warning btn-sm"
                       asp-action="Edit"
                       asp-controller="User"
                       asp-route-id="@user.UserID">Chỉnh Sửa</a>

                    <button type="button" class="btn btn-danger btn-delete"
                            data-id="@user.UserID"
                            data-name="@user.Username">
                        Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            document.querySelectorAll(".btn-delete").forEach(btn => {
                btn.addEventListener("click", function () {
                    const userId = this.dataset.id;
                    const username = this.dataset.name;

                    Swal.fire({
                        title: "Xác nhận xóa?",
                        text: `Bạn có chắc muốn xóa người dùng "${username}" không?`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#d33",
                        cancelButtonColor: "#3085d6",
                        confirmButtonText: "🗑 Đồng ý xoá",
                        cancelButtonText: "Hủy"
                    }).then(result => {
                        if (result.isConfirmed) {
                            fetch(`/Admin/User/DeleteUserAjax/${userId}`, {
                                method: "POST",
                                headers: {
                                    "RequestVerificationToken": token
                                }
                            })
                                .then(res => res.json())
                                .then(data => {
                                    if (data.success) {
                                        Swal.fire({
                                            icon: "success",
                                            title: "Thành công",
                                            text: data.message,
                                            timer: 1500,
                                            showConfirmButton: false
                                        });

                                        // Xóa dòng khỏi bảng mà không reload
                                        document.querySelector(`#row-${userId}`)?.remove();
                                    } else {
                                        Swal.fire("Lỗi", data.message, "error");
                                    }
                                })
                                .catch(() => Swal.fire("Lỗi", "Không thể xoá người dùng.", "error"));
                        }
                    });
                });
            });
        });
    </script>
}
