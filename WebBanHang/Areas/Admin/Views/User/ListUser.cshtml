@using WebBanHang.Models;
@model IEnumerable<UserModel>

@{
    ViewData["Title"] = "List User";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List User</title>
</head>
<body>
    <h3>List User</h3>
    <a class="btn btn-primary" asp-action="Create" asp-controller="User">Add User</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>PasswordHash</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.PasswordHash</td>
                    <td>@user.Phone</td>
                    <td>@user.Role</td> <!-- ✅ Hiển thị Role -->
                    <td>
                        <a class="btn btn-warning btn-sm"
                           asp-action="Edit"
                           asp-controller="User"
                           asp-route-id="@user.UserID">Edit</a>

                        <a class="btn btn-danger btn-sm confirmDeletion"
                           asp-action="Delete"
                           asp-controller="User"
                           asp-route-id="@user.UserID"
                           onclick="return confirm('Bạn có chắc muốn xóa?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
