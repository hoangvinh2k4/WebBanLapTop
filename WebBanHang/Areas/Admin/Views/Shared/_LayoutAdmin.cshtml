﻿
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">
	<title>Home | Vinh-Shopper</title>
	<!-- Bootstrap CSS -->
	<link href="~/css/bootstrap.min.css" rel="stylesheet" />
	<!-- Font Awesome (dùng CDN đảm bảo load icon) -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-Xxj0h+1VYK4L+2B2JvGZK0... (cắt bớt) ..." crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link href="~/css/main.css" rel="stylesheet">
	<link href="~/css/responsive.css" rel="stylesheet">
	<link href="~/css/register.css" rel="stylesheet" asp-append-version="true">
</head><!--/head-->

<body>
	<header id="header">
		<!--header-->
		<div class="header_top">
			<!--header_top-->
			<div class="container">
				<div class="row">
					<div class="col-sm-6">
						<div class="contactinfo">
							<ul class="nav nav-pills">
								<li><a href="#"><i class="fa fa-phone"></i> 0973455740 </a></li>
								<li><a href="#"><i class="fa fa-envelope"></i> vinhtienle004@gmail.com</a></li>
							</ul>
						</div>
					</div>

				</div>
			</div>
		</div><!--/header_top-->
		<div class="header-middle">
			<!--header-middle-->
			<div class="container">
				<div class="row align-items-center">
					<!-- Logo bên trái -->
					<div class="col-sm-2">
						<div class="logo">
							<a href="/"><img src="~/images/thinkpad.jpg" alt="Logo" style="max-height:50px;" /></a>
						</div>
					</div>
					<div class="col-sm-6">						
					</div>
					<!-- Menu bên phải -->
					<div class="col-sm-4">
						<div class="shop-menu d-flex justify-content-end">
							<ul class="nav">

								@if (Context.Session.GetString("UserId") != null) // đã đăng nhập
								{
									<li>
										<a asp-controller="Account" asp-action="Logout" style="left: 200px">
											<i class="fa fa-lock"></i>Chào, @Context.Session.GetString("Username") - Đăng Xuất
										</a>
									</li>
								}
								else // chưa đăng nhập
								{
									<li class="nav-item">
										<a class="nav-link" asp-controller="Account" asp-action="Login" style="left: 250px">
											<i class="fa fa-lock"></i> Login
										</a>
									</li>

								}
								<div class="row">
									<div class="col-sm-4">
										<div class="logo pull-left">
											<a href="index.html"><img src="images/home/logo.png" alt="" /></a>
										</div>
									</div>
								</div>
						</div>

					</div><!--/header-middle-->

					<div class="header-bottom">
						<!--header-bottom-->
						<div class="container">
							<div class="row">
								<div class="col-sm-9">
									<div class="navbar-header">
										<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
											<span class="sr-only">Toggle navigation</span>
											<span class="icon-bar"></span>
											<span class="icon-bar"></span>
											<span class="icon-bar"></span>
										</button>
									</div>
									<div class="mainmenu pull-left">
										<ul class="nav navbar-nav collapse navbar-collapse">
											<li><a asp-controller="User" asp-action="ListUser"><i class="fa-solid fa-gear"></i> Quản lý người dùng </a></li>
											<li><a asp-controller="Product" asp-action="Index"><i class="fa-solid fa-gear"></i> Quản lý sản phẩm </a></li>
											<li><a asp-controller="Statistical" asp-action="StatisticalIndex"><i class="fa-solid fa-chart-column"></i>  Thống kê doanh số </a></li>
											<li><a asp-area="Admin" asp-controller="Shipping" asp-action="Index"><i class="fa-solid fa-gear"></i>Phí Ship</a></li>
											<li><a asp-controller="Discount" asp-action="Index"><i class="fa-solid fa-ticket"></i> Quản lý mã giảm giá </a></li>
										</ul>

									</div>
								</div>
								<div class="col-sm-3">
								</div>
							</div>
						</div>
					</div><!--/header-bottom-->
	</header><!--/header-->
	<section>
		<div class="container">
			<div class="row">
				@RenderBody()
			</div>
	</section>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="~/js/main.js"></script>
	<script src="~/js/Common.js"></script>
	
	<script src="~/js/bootstrap.min.js"></script>
	
	<script src="~/js/price-range.js"></script>
	<script src="~/js/jquery.prettyPhoto.js"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>